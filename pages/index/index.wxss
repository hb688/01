/**index.wxss**/
.header-menu {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #FFFFFF;
}

.header-menu > view {
  margin: 0 0 10rpx 30rpx;
  padding-bottom: 4rpx;
  font-family: '微软雅黑';
  font-size: 38rpx;
}

.header-menu > view.check {
  color: #d81e06;
  border-bottom: 1px solid #d81e06;
}

.v-main {
  padding: 30rpx;
  margin-top:  52rpx;
}
.v-main > view {
  width: 700rpx;
  display: block;
}
.small-title {
  font-size: 30rpx;
  font-family: '微软雅黑';
}
.pd-window {
  margin: 30rpx 0;
}
.v-product {
  padding: 5rpx 30rpx;
  margin-top:  52rpx;
}
.pd-d {
  width: 210rpx;
  margin-right: 30rpx;
  display: inline-block;
  margin-bottom: 30rpx;
}
.pd-d:nth-child(3n+0) {
  margin-right: 0rpx;
}
.pd-d > image {
  width: 210rpx;
  height: 375rpx;
  display: block;
  margin-bottom: 10rpx;
}
.pd-d > text {
  font-size: 28rpx;
  font-family: '微软雅黑';
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wd {
  display: flex;
  align-items:center;
  justify-content: center;
  flex-direction: row;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.wd > view {
  width: 500rpx;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  padding: 20rpx;
}
.wd-text {
  width: 100%;
  text-align: center;
}
.wd-text > text {
  font-size: 30rpx;
  font-family: '微软雅黑';
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.wd-input {
  width: 100%;
}
.wd-input > input {
  border: 1px solid #F1F1F1;
  font-size: 30rpx;
  font-family: "微软雅黑";
  padding: 15rpx;
  margin-top: 30rpx;
}
.wd-button {
  width: 100%;
}
.wd-button>button{
  margin-top: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}

/*下面是以前自带的样式。*/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}