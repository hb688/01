page {
  height: 100%;
  background-color: #F1F1F1;
}
.ui-input {
  background-color: #FFFFFF;
  margin: 20rpx 0;
  padding: 0 20rpx;
}
.ui-input > input {
  border-bottom: 1px solid #F1F1F1;
  font-size: 36rpx;
  font-family: "微软雅黑";
  padding: 20rpx 0;
}
.ui-input > input:last-child {
  border-bottom: none;
}
.ui-button {
  padding: 20rpx 20rpx;
}