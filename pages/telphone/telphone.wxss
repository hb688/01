page {
  height: 100%;
  /* background-color: #F1F1F1; */
}
.ui-header {
  text-align: center;
  font-size: 30rpx;
  font-family: "微软雅黑";
  color: #888888;
  line-height: 60rpx;
  display: block;
}
.ui-header:first-child {
  margin-top: 60rpx;
}
.ui-input {
  background-color: #FFFFFF;
  margin: 20rpx 0;
  padding: 0 100rpx;
  height: 80rpx;
}
.ui-input > .input-text {
  border-bottom: 1px solid #CCC;
  font-size: 30rpx;
  font-family: "微软雅黑";
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
}
.ui-input > .input-button {
  font-size: 26rpx;
  font-family: "微软雅黑";
  padding: 0;
  line-height: 80rpx;
  width: 250rpx;
  height: 80rpx;
  float: left;
  background-color: rgba(0, 0, 0, 0);
}
.ui-input > .input-button::after {
  border: 1px solid rgb(255, 118, 97);
  background-color: rgba(0, 0, 0, 0);
}
.ui-button {
  margin-top: 60rpx;
}
.ui-button>button {
  margin: 0 auto;
  width: 400rpx;
  padding: 0 20rpx;
  display: block;
  color: #FFF;
  font-size: 30rpx;
  line-height: 70rpx;
  height: 70rpx;
  background-color: rgb(255, 118, 97);
}